@inject IWebHostEnvironment webHostEnvironment;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Excel.Loader.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Excel.Loader.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SSIS Package Decomposition Document Uploader Tool</a> 
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item menu-buttons">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><img class="dashboard" src="/images/upload.png">Upload Package Document</a>
                        </li>
                        <li class="nav-item menu-buttons">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DownloadXlsFile"><img class="dashboard" src="/images/download.png">Download Package Document</a>
                        </li>
                        <li class="nav-item menu-buttons">
                            <a target="_blank" class="nav-link text-dark" href="http://51.12.52.30/Reports/report/Greene%20King/Package%20Decomposition/"><img class="dashboard" src="/images/dashboard.png">Reporting Dashboard</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div>
            Environment - @webHostEnvironment.EnvironmentName
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
