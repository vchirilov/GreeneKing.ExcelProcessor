@{
    ViewData["Title"] = "Home Page";
}

@model FileUploadModel


<form form method="post" asp-controller="Home" asp-action="UploadFiles" class=" mt-5" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="PackageName" class="col-sm-2 col-form-label"> Package Name</label>
        <div class="col-sm-10">
            <input asp-for="PackageName" class="form-control" placeholder="Name" />
            <span asp-validation-for="PackageName" class="text-danger"></span>
        </div>
    </div>

    <br>
    <div class="form-group row">
        <label asp-for="UploadXlsFile" class="col-sm-2 col-form-label">Upload Excel File</label>
        <div class="col-sm-10">
            <input asp-for="UploadXlsFile" class="form-control custom-file-input" />
        </div>
    </div>
    <br>
    <div class="form-group row">
        <label asp-for="UploadControlFlowImages" class="col-sm-2 col-form-label">Upload Control Flows</label>
        <div class="col-sm-10">
            <input asp-for="UploadControlFlowImages" class="form-control custom-file-input" />
        </div>
    </div>
    <br>
    <div class="form-group row">
        <label asp-for="UploadDataFlowImages" class="col-sm-2 col-form-label">Upload Data Flows</label>
        <div class="col-sm-10">
            <input asp-for="UploadDataFlowImages" class="form-control custom-file-input" />
        </div>
    </div>
    <br>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save package</button>
        </div>
    </div>
    <br/>
    <span style="color:cornflowerblue;">@Html.Raw(ViewBag.PackageName)</span>
</form>
